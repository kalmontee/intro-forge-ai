{
  "editor.tabSize": 2,
  "editor.wordWrap": "wordWrapColumn",
  "editor.wordWrapColumn": 140,
  "editor.rulers": [140],
  "editor.formatOnSave": true,
  "prettier.useTabs": true,
  "prettier.trailingComma": "none",
